{
  "manifest_version": 3,
  "name": "Celebration Overlay",
  "version": "1.0",
  "description": "Adds fireworks when pressing the enter key",
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon_on.png",
      "48": "icon_on.png",
      "128": "icon_on.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
